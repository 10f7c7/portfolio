{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "src/build.js",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": false,
      "delay": 2500
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node src/build.js",
    "server": "node src/server.js",
    "twcss": "npx @tailwindcss/cli -i ./src/input.css -o ./build/output.css --watch",
    "run": "node src/build.js && node src/server.js & npx @tailwindcss/cli -i ./src/input.css -o ./build/output.css --watch",
    "watch": "npm-watch & node src/server.js & npm run twcss"
  },
